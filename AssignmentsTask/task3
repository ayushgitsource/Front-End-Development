<h2>Weather Information App</h2>

<input type="text" id="city" placeholder="Enter city name">
<button id="btn">Get Weather</button>

<div id="error"></div>
<div id="result"></div>

<script>
async function getWeather() {
  const city = document.getElementById("city").value.trim();
  const result = document.getElementById("result");
  const error = document.getElementById("error");
  result.innerHTML = "";
  error.innerHTML = "";
  if (city === "") {
    error.innerHTML = "Please enter a city name.";
    return;
  }
  const key = "YOUR_API_KEY";
  const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${key}&units=metric`;
  try {
    const res = await fetch(url);
    if (!res.ok) throw new Error("Invalid city");
    const data = await res.json();
    const temp = data.main.temp;
    const hum = data.main.humidity;
    const cond = data.weather[0].description;
    result.innerHTML = `Temperature: ${temp}Â°C<br>Humidity: ${hum}%<br>Condition: ${cond}`;
  } catch {
    error.innerHTML = "City not found or API error.";
  }
}
document.getElementById("btn").addEventListener("click", getWeather);
</script>

</body>
