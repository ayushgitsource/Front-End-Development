<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Image Carousel</title>
<style>
  body { display:flex; justify-content:center; align-items:center; height:100vh; background:#f5f5f5; margin:0; }
  .carousel { width:500px; position:relative; }
  .carousel img { width:100%; height:320px; border-radius:10px; object-fit:cover; }
  .btns { position:absolute; top:50%; width:100%; display:flex; justify-content:space-between; transform:translateY(-50%); }
  button { background:#00000080; color:white; border:none; padding:10px 18px; font-size:16px; border-radius:6px; cursor:pointer; }
</style>
</head>
<body>

<div class="carousel" id="carousel">
  <img id="slide" src="https://picsum.photos/id/1011/800/500">
  <div class="btns">
    <button id="prev">Prev</button>
    <button id="next">Next</button>
  </div>
</div>

<script>
  const images = [
    "https://picsum.photos/id/1011/800/500",
    "https://picsum.photos/id/1025/800/500",
    "https://picsum.photos/id/1035/800/500",
    "https://picsum.photos/id/1043/800/500",
    "https://picsum.photos/id/1050/800/500"
  ];

  let index = 0;
  const slide = document.getElementById("slide");
  const next = document.getElementById("next");
  const prev = document.getElementById("prev");
  const carousel = document.getElementById("carousel");
  let auto = setInterval(nextSlide, 3000);

  function showSlide(i) {
    slide.src = images[i];
  }

  function nextSlide() {
    index = (index + 1) % images.length;
    showSlide(index);
  }

  function prevSlide() {
    index = (index - 1 + images.length) % images.length;
    showSlide(index);
  }

  next.onclick = nextSlide;
  prev.onclick = prevSlide;

  carousel.onmouseenter = () => clearInterval(auto);
  carousel.onmouseleave = () => auto = setInterval(nextSlide, 3000);
</script>

</body>
</html>
